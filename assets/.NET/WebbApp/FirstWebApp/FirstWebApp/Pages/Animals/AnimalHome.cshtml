@page
@model FirstWebApp.Pages.Animals.AnimalHomeModel

@{
    ViewData["Title"] = "AnimalHome";
}

<h1>AnimalHome</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Animal.Name" class="control-label"></label>
                <input asp-for="Animal.Name" class="form-control" />
                <span asp-validation-for="Animal.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.Type" class="control-label"></label>
                <input asp-for="Animal.Type" class="form-control" />
                <span asp-validation-for="Animal.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        @{
            if (Model.Animals.Count <= 0)
            {
                <h2>No Animals found in database...</h2>
            }
            else
            {
                <ul style="list-style-type: none">
                    @{
                        foreach (var animal in Model.Animals)
                        {
                            <li><div class="card"><div class="card-header">@animal.Name</div></div></li>
                        }
                    }
                </ul>
            }
        }
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
